{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/apps/ui",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [],
    "paths": {
      "@shared/interfaces": ["../../libs/shared/interfaces/src/lib"]
    }
  },
  "files": [
    "src/main.ts"
  ],
